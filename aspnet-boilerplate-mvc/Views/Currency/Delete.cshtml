@model aspnet_boilerplate_mvc.Entities.Currency

@{
    ViewData["Title"] = "Delete Currency";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Currency")">Currencies</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Details", "Currency", new { id = Model.Id })">Currency Details</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Currency</li>
        </ol>
    </nav>
}

<h2>Delete Currency</h2>

<div>
    <h4>Are you sure you want to delete this currency?</h4>
    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>@Model.Id</dd>
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Code:</dt>
        <dd>@Model.Code</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit">Delete</button>
    </form>
</div>