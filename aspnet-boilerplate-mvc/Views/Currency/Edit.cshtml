@model aspnet_boilerplate_mvc.Entities.Currency

@{
    ViewData["Title"] = "Edit Currency";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout file
}

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Currency")">Currencies</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Details", "Currency", new { id = Model.Id })">Currency Details</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Currency</li>
        </ol>
    </nav>
}

<h2>Edit Currency</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Code:</label>
        <input asp-for="Code" />
    </div>
    <div>
        <button type="submit">Save</button>
    </div>
</form>