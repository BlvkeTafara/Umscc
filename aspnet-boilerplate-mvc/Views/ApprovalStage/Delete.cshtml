@model aspnet_boilerplate_mvc.Entities.ApprovalStage

@{
    ViewData["Title"] = "Delete Approval Stage";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ApprovalStage")">Approval Stages</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>

<h2>Delete Approval Stage</h2>

<div>
    <h4>Are you sure you want to delete this approval stage?</h4>
    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>@Model.Id</dd>
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Code:</dt>
        <dd>@Model.Code</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>