@model aspnet_boilerplate_mvc.Entities.BankAccount

@{
    ViewData["Title"] = "Delete Bank Account";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout file
}

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "BankAccount")">Bank Accounts</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Details", "BankAccount", new { id = Model.Id })">Bank Account Details</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Bank Account</li>
        </ol>
    </nav>
}

<h2>Delete Bank Account</h2>

<div>
    <h4>Are you sure you want to delete this bank account?</h4>
    <dl class="dl-horizontal">
        <dt>Account Number:</dt>
        <dd>@Model.AccountNumber</dd>
        <dt>Bank ID:</dt>
        <dd>@Model.BankId</dd>
        <dt>Currency ID:</dt>
        <dd>@Model.CurrencyId</dd>
        <dt>Type:</dt>
        <dd>@Model.Type</dd>
        <dt>Status:</dt>
        <dd>@Model.Status</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit">Delete</button>
    </form>
</div>