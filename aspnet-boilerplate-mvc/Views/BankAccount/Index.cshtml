@model List<aspnet_boilerplate_mvc.Entities.BankAccount>

@{
    ViewData["Title"] = "Bank Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Bank Accounts</li>
        </ol>
    </nav>
}

<h2>Bank Accounts</h2>

<table>
    <thead>
        <tr>
            <th>Account Number</th>
            <th>Bank ID</th>
            <th>Currency ID</th>
            <th>Type</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bankAccount in Model)
        {
            <tr>
                <td>@bankAccount.AccountNumber</td>
                <td>@bankAccount.BankId</td>
                <td>@bankAccount.CurrencyId</td>
                <td>@bankAccount.Type</td>
                <td>@bankAccount.Status</td>
            </tr>
        }
    </tbody>
</table>